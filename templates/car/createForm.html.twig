{% extends 'base.html.twig' %}

{% block title %}Véhiclog - Créer{% endblock %}

{% block body %}
    <section id="add">
        <a href="{{ url('home.show') }}">← Retour</a>
        <h1>Ajouter une voiture</h1>
        {{ form_start(form) }}
            <div class="input">
                {{ form_row(form.name) }}
            </div>
            <div class="input">
                {{ form_row(form.description) }}
            </div>
            <div class="flex-input">
                <div class="input">
                    {{ form_row(form.monthlyPrice) }}
                </div>
                <div class="input">
                    {{ form_row(form.dailyPrice) }}
                </div>
            </div>
        <div class="flex-input">
            <div class="input">
                {{ form_row(form.numberSeats) }}
            </div>
            <div class="input">
                {{ form_row(form.isManualGearbox) }}
            </div>
        </div>
        {#{{ form_row(form.createdAt) }}#}
            <button class="btn-add">Ajouter</button>
        {{ form_end(form) }}
    </section>
{% endblock %}